<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="OUR GOAL"
        android:textSize="50sp"
        android:fontFamily="sans-serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/colorPrimary"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="373dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="115dp"
        android:fontFamily="sans-serif"
        android:text="Our application goal is to provide virtual skin cancer or non-cancer diagnosis from input images. This system helps early and accurate diagnosis from anywhere."
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="30sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="275dp"
        android:text="STEPS:" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="339dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="320dp"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:text="1. Do Login with Google Account" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="336dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="254dp"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:text="2. Provide Lesion Part as Input Image" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="331dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="218dp"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:text="3. Result will Display" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="286dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="180dp"
        android:fontFamily="sans-serif"
        android:text="1. Benign with Risk Level"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="278dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="125dp"
        android:fontFamily="sans-serif"
        android:text="2. Malignant with Justification Features"
        android:textSize="20sp" />

</RelativeLayout>